<%- model_class = Equipment -%>
<div class="page-header">
  <h1><%=t '.title', :default => Equipment %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:equip_id) %></dt>
      <dd><pre class="prettyprint"><%= @equipment.equip_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:model) %></dt>
      <dd><pre class="prettyprint"><%= @equipment.model %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:purchase_date) %></dt>
      <dd><pre class="prettyprint"><%= @equipment.purchase_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @equipment.description %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              equipment_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_equipment_path(@equipment), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              equipment_path(@equipment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

