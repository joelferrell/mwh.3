<%- model_class = Mileage -%>
<div class="page-header">
  <h1><%=t '.title', :default => Mileage %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:starting_mile) %></dt>
      <dd><pre class="prettyprint"><%= @mileage.starting_mile %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ending_mile) %></dt>
      <dd><pre class="prettyprint"><%= @mileage.ending_mile %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:rate) %></dt>
      <dd><pre class="prettyprint"><%= @mileage.rate %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:total_miles) %></dt>
      <dd><pre class="prettyprint"><%= @mileage.total_miles %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:mile_total_cost) %></dt>
      <dd><pre class="prettyprint"><%= @mileage.mile_total_cost %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              mileages_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_mileage_path(@mileage), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mileage_path(@mileage),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

