<%- model_class = Part -%>
<div class="page-header">
  <h1><%=t '.title', :default => Part %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:wo_number) %></dt>
      <dd><pre class="prettyprint"><%= @part.wo_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:part_number) %></dt>
      <dd><pre class="prettyprint"><%= @part.part_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:part_description) %></dt>
      <dd><pre class="prettyprint"><%= @part.part_description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:unit_price) %></dt>
      <dd><pre class="prettyprint"><%= @part.unit_price %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:unit_quantity) %></dt>
      <dd><pre class="prettyprint"><%= @part.unit_quantity %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:parts_total) %></dt>
      <dd><pre class="prettyprint"><%= @part.parts_total %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              parts_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_part_path(@part), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              part_path(@part),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

