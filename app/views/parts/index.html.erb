<%- model_class = Part -%>
<div class="page-header">
  <h1><%=t '.title', :default => Part %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:wo_number) %></th>
      <th><%= model_class.human_attribute_name(:part_number) %></th>
      <th><%= model_class.human_attribute_name(:part_description) %></th>
      <th><%= model_class.human_attribute_name(:unit_price) %></th>
      <th><%= model_class.human_attribute_name(:unit_quantity) %></th>
      <th><%= model_class.human_attribute_name(:parts_total) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.id %></td>
        <td><%= part.wo_number %></td>
        <td><%= part.part_number %></td>
        <td><%= part.part_description %></td>
        <td><%= part.unit_price %></td>
        <td><%= part.unit_quantity %></td>
        <td><%= part.parts_total %></td>
        <td><%=l part.created_at, format: :long %></td>
        <td>
          <%= link_to part_path(part), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to part_path(part), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_part_path,
            :class => 'btn btn-primary' %>
