<%= form_for @work_order, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :wo_number, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :wo_number, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :start_date, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :comp_date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :comp_date, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :requestor, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :requestor, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :priority, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :priority, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :repair_facility, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :repair_facility, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :repair_type, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :repair_type, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :location, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :location, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :summary, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :summary, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :est_completion, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :est_completion, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :percent_complete, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :percent_complete, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  work_orders_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
