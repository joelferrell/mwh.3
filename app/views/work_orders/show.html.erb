<%- model_class = WorkOrder -%>
<div class="page-header">
  <h1><%=t '.title', :default => WorkOrder %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:wo_number) %></dt>
      <dd><pre class="prettyprint"><%= @work_order.wo_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:start_date) %></dt>
      <dd><pre class="prettyprint"><%= @work_order.start_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:comp_date) %></dt>
      <dd><pre class="prettyprint"><%= @work_order.comp_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:requestor) %></dt>
      <dd><pre class="prettyprint"><%= @work_order.requestor %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:priority) %></dt>
      <dd><pre class="prettyprint"><%= @work_order.priority %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:repair_facility) %></dt>
      <dd><pre class="prettyprint"><%= @work_order.repair_facility %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:repair_type) %></dt>
      <dd><pre class="prettyprint"><%= @work_order.repair_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:location) %></dt>
      <dd><pre class="prettyprint"><%= @work_order.location %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:summary) %></dt>
      <dd><pre class="prettyprint"><%= @work_order.summary %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:est_completion) %></dt>
      <dd><pre class="prettyprint"><%= @work_order.est_completion %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:percent_complete) %></dt>
      <dd><pre class="prettyprint"><%= @work_order.percent_complete %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              work_orders_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_work_order_path(@work_order), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              work_order_path(@work_order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

