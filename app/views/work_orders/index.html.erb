<%- model_class = WorkOrder -%>
<div class="page-header">
  <h1><%=t '.title', :default => WorkOrder %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:wo_number) %></th>
      <th><%= model_class.human_attribute_name(:start_date) %></th>
      <th><%= model_class.human_attribute_name(:comp_date) %></th>
      <th><%= model_class.human_attribute_name(:requestor) %></th>
      <th><%= model_class.human_attribute_name(:priority) %></th>
      <th><%= model_class.human_attribute_name(:repair_facility) %></th>
      <th><%= model_class.human_attribute_name(:repair_type) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:summary) %></th>
      <th><%= model_class.human_attribute_name(:est_completion) %></th>
      <th><%= model_class.human_attribute_name(:percent_complete) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @work_orders.each do |work_order| %>
      <tr>
        <td><%= work_order.id %></td>
        <td><%= work_order.wo_number %></td>
        <td><%= work_order.start_date %></td>
        <td><%= work_order.comp_date %></td>
        <td><%= work_order.requestor %></td>
        <td><%= work_order.priority %></td>
        <td><%= work_order.repair_facility %></td>
        <td><%= work_order.repair_type %></td>
        <td><%= work_order.location %></td>
        <td><%= work_order.summary %></td>
        <td><%= work_order.est_completion %></td>
        <td><%= work_order.percent_complete %></td>
        <td><%=l work_order.created_at, format: :long %></td>
        <td>
          <%= link_to work_order_path(work_order), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to work_order_path(work_order), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_work_order_path,
            :class => 'btn btn-primary' %>
